{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "allowJs": false,
    "module": "commonjs",
    "skipLibCheck": false, //try true if not working
//    "lib": [
//      "es2022",
//      "dom"
//    ],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/**/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}